<div class="background">
    <div class="shape"></div>
    <div class="shape"></div>
</div>
<form action="/update-password" method="POST">
    {{#if message}}
    <h3 class="uk-text-danger">{{message}}</h3>
    {{else}}
    <h3>Change Password</h3>
    {{/if}}
    <label for="password">Password</label>
    <input type="password" placeholder="minimum length of 8 chars" id="password" name="password" {{#if message}}value={{password}}{{/if}}>

    <label for="password">Confirm Password</label>
    <input type="password" placeholder="minimum length of 8 chars" id="password-confirm" name="passwordConfirm" {{#if message}}value={{passwordConfirm}}{{/if}}>
    <i class="far fa-eye" id="togglePassword" style="margin-left: 306px; cursor: pointer;"></i>

    <input type="hidden" name="userId" value={{userId}}>
    <input type="hidden" name="passwordToken" value={{passwordToken}}>
    <input type="hidden" name="_csrf" value={{csrfToken}}>
    <button class="" type="submit">Change Password</button>
</form>
<script src="/js/eye.js"></script>